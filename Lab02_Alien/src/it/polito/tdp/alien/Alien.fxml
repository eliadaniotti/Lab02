<BorderPane prefHeight="343.0" prefWidth="513.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.alien.AlienController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <top>
      <VBox prefHeight="326.0" prefWidth="493.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Lab 1 - Alien Translator">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <HBox prefHeight="54.0" prefWidth="493.0">
               <children>
                  <Label text="Alien text">
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </Label>
                  <TextField prefHeight="25.0" prefWidth="263.0">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnTranslate" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#doTranslate" prefHeight="25.0" prefWidth="64.0" text="Translate">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
               </children>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </HBox>
            <TextArea prefHeight="200.0" prefWidth="200.0" />
            <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" prefHeight="25.0" prefWidth="63.0" text="Reset">
               <VBox.margin>
                  <Insets left="430.0" top="15.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
